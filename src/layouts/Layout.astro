---
import "../styles/global.css";
import Header from "../components/sections/1-Header.astro";
import Footer from "../components/sections/7-Footer.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const { lang, t } = Astro.props
const currentLang = Astro.currentLocale || 'es';
---

<!doctype html>
<html lang={lang}>
	<head>
		<!-- Script de tema - cargado de forma inline para evitar flash -->
		<script src="/Theme.js" is:inline></script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/styles/global.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{t("head.title")}</title>
		<script id="translations-data" type="application/json" is:inline>
			{JSON.stringify(ui)}
		</script>
		<script src="/Layout.js" is:inline></script>
	</head>
	<body>
		<Header t={t} />
		<main class="p-8 pt-24">
			<slot />
		</main>
		<Footer t={t} />
	</body>
</html>
