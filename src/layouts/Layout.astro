---
import "../styles/layout.css";

const { t, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/styles/global.css" />
		<link rel="stylesheet" href="/src/styles/layout.css" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio | 13rian</title>
	</head>
	<body
		class="bg-gray-950 text-white font-sans"
		x-data="{ dark: true, lang: 'es' }"
		:class="dark ? 'bg-gray-950 text-white' : 'bg-white text-gray-900'"
	>
		<header class="header fixed top-0 left-0 w-full z-50 glass">
			<h1 class="header-title">13rian</h1>
			<nav class="header-nav">
				<ul>
					<li><a href="#home" class="hover:underline">{t('layout').home}</a></li>
					<li>
						<a href="#aboutme" class="hover:underline">{t('layout').about}</a>
					</li>
					<li>
						<a href="#projects" class="hover:underline"
							>{t('layout').projects}</a
						>
					</li>
					<li>
						<a href="#technologies" class="hover:underline"
							>{t('layout').technologies}</a
						>
					</li>
					<li>
						<a href="#contactme" class="hover:underline"
							>{t('layout').contact}</a
						>
					</li>
				</ul>
			</nav>
			<div class="header-actions">
				<!-- Log visual para depuraciÃ³n de idioma -->
