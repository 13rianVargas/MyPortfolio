---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import LanguagePicker from '../components/LanguagePicker.astro';
import ThemeToggleButton from '../components/ThemeToggleButton.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

const { lang, t } = Astro.props
const currentLang = Astro.currentLocale || 'es';
---

<!doctype html>
<html lang={lang}>
	<head>
		<!-- Script de tema - cargado de forma inline para evitar flash -->
		<script src="/Theme.js" is:inline></script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/styles/global.css" />
		<link rel="stylesheet" href="/src/styles/layout.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{t("head.title")}</title>
		<script id="translations-data" type="application/json" is:inline>
			{JSON.stringify(ui)}
		</script>
		<script src="/Layout.js" is:inline></script>
	</head>
	<body>
		<header class="header bg-base-50/50 dark:bg-base-950/50 backdrop-blur-xl">
			<h1 class="header-title">13rian</h1>
			<nav class="header-nav">
				<ul>
					<li>
						<a href={getRelativeLocaleUrl(currentLang,"#home")}>{t("layout.home")}</a>
					</li>
					<li>
						<a href={getRelativeLocaleUrl(currentLang,"#aboutme")}>{t("layout.about")}</a>
					</li>
					<li>
						<a href={getRelativeLocaleUrl(currentLang,"#projects")}>{t("layout.projects")}</a>
					</li>
					<li>
						<a href={getRelativeLocaleUrl(currentLang,"#technologies")}>{t("layout.technologies")}</a>
					</li>
					<li>
						<a href={getRelativeLocaleUrl(currentLang,"#contactme")}>{t("layout.contact")}</a>
					</li>
				</ul>
			</nav>
			<div class="header-actions">
				<ThemeToggleButton />
				<LanguagePicker />
			</div>
		</header>

		<main class="p-8 pt-24">
			<slot />
		</main>

		<footer>
			<span>{t("layout.footer")}</span> â€” {new Date().getFullYear()}
		</footer>
	</body>
</html>
